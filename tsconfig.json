{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "services": ["services"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./webpack.config.js"
  ]
}